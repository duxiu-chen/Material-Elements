<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingBottom="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toast"
                android:layout_margin="24dp"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_btn_toast_simple"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:background="@drawable/appcompat_button_shape2"
                android:text="SIMPLE"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_btn_toast_layout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:background="@drawable/appcompat_button_shape2"
                android:text="CUSTOM LAYOUT"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_btn_toast_color"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:background="@drawable/appcompat_button_shape2"
                android:text="CUSTOM COLORED"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/navigation_bottom_normal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snackbar"
                android:layout_marginLeft="24dp"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_btn_snackbar_simple"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:background="@drawable/appcompat_button_shape2"
                android:text="SIMPLE"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_btn_snackbar_action"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:background="@drawable/appcompat_button_shape2"
                android:text="WITH ACTION"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>